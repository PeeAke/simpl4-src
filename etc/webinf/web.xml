<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <listener>
    <listener-class>org.ms123.launcher.OsgiStarter</listener-class>
  </listener>
  <servlet>
    <servlet-name>bridge</servlet-name>
    <servlet-class>org.ms123.launcher.BridgeServlet</servlet-class>
    <init-param>
      <param-name>maxThreads</param-name>
      <param-value>50</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>bridge</servlet-name>
    <url-pattern>/bridge/*</url-pattern>
  </servlet-mapping>
</web-app>
