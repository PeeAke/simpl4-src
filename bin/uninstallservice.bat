@echo off
set SERVICE_NAME=Simpl4Service
set SIMPL4DIR=%1

@echo off
SC QUERY %SERVICE_NAME% | find "RUNNING" >nul
IF %ERRORLEVEL% == 0 (
	ECHO RUNNING
	%SIMPL4DIR%\bin\%SERVICE_NAME%.exe //SS//%SERVICE_NAME%  
)
SC QUERY %SERVICE_NAME% | find "STOPPED" >nul
IF %ERRORLEVEL% == 0 (
	ECHO STOPPED
	%SIMPL4DIR%\bin\%SERVICE_NAME%.exe //DS//%SERVICE_NAME%  
)
